{
  "name": "@shaenchen/cc-devtools",
  "version": "0.1.1",
  "description": "A modular developer toolkit for Claude Code that provides kanban project management, persistent memory, implementation planning, and source code mapping capabilities.",
  "main": "dist/cli/index.js",
  "bin": {
    "cc-devtools": "./dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js && npm run copy-templates && npm run build:web",
    "build:web": "cd src/web && vite build",
    "copy-templates": "mkdir -p dist/templates && cp -r templates/* dist/templates/",
    "install:local-deps": "npm install --force ~/Projects/custom-type-enforcement/shaenchen-custom-type-enforcement-*.tgz",
    "pack:local": "npm run build && npm pack",
    "pack:update-amaya": "npm run pack:local && cd ~/Projects/amaya && npm run install:local-deps",
    "dev": "tsc --watch",
    "dev:web": "cd src/web && vite",
    "dev:server": "tsx watch --tsconfig tsconfig.json src/cli/index.ts web",
    "dev:all": "concurrently --names \"SERVER,WEB\" --prefix-colors \"cyan,magenta\" \"npm run dev:server\" \"npm run dev:web\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "typecheck": "tsc --noEmit && custom-type-enforcement",
    "prepublishOnly": "npm run build && npm test",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude-code",
    "developer-tools",
    "kanban",
    "memory",
    "planner",
    "source-code-mapper",
    "mcp",
    "ai-assistant"
  ],
  "author": "Shaen Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaenchen/cc-devtools.git"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
